<main>
  <section class="author-card">
    <h1><%= "#{possessive_display_name(@author)} Profile" %></h1>
    <h3><%= @author.email %></h3>
    <button><%= link_to "Edit Profile", edit_author_path(@author) %></button>
  </section>

  <% if !is_admin? %>
    <%= button_to "Author's Stories", author_stories_path(current_author), method: :get %>
  <% end %>
</main>

