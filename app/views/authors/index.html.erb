<main>
  <%= button_to "Author Stats", admin_stats_path, method: :get%>
  <h1>Swahili Semantic Diary Authors</h1>
  <% @authors.each do |author|%>
    <section class="author-card">
      <h2><%= link_to "#{author.first_name} #{author.last_name}", author_path(author), method: :get %></h2>
      <h3><%= "#{author.email}" %></h3>
      <button><%= link_to "Delete", author, method: :delete, data: {confirm: "Are you sure you want to delete #{display_name(author)}?"}%></button>
    </section>
  <% end %>
</main>
