<h1> <%= "#{@author.first_name}'s" %> Swahili Diary</h1>
<button> <%= link_to "Edit Profile", edit_author_path(@author) %> </button>
<% # render 'new' %>

<h2>Stories</h2>
<h3><%= link_to "Write New Story",  new_author_story_path %></h3>
<article>
  <% @author.stories.reverse.each do |story| %>
    <h3><%= story.story_title %></h3>
    <p><%= story.story %></p>
  <% end %>
</article>
