<!DOCTYPE html>
<html>
  <head>
    <title>SwahiliSemanticDiary</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
      <% if current_author %>
        <%= link_to "Log out", logout_path, method: :get %>
      <% else %>
        <span>
          <%= link_to "Sign up", sign_up_path, method: :get %> |
          <%= link_to "Log in", login_path, method: :get %>
        </span>
      <% end %>

      <% if is_admin? %>
        <%= button_to "Author List", authors_path, method: :get%>
      <% end %>
    </nav>

    <%= yield %>
  </body>
</html>
