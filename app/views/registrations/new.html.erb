<main>
  <h1>Swahili Semantic Diary</h1>
  <% # Elimu Haina Mwisho %>

  <%= render partial: "authors/errors", locals: {author: @author} %>

  <article class="sign-up-card">
    <%= form_for(@author, url: sign_up_path(@author)) do |f| %>
      <%= f.text_field :first_name, :placeholder => "first name", :autofocus => true %>
      <%= f.text_field :last_name, :placeholder => "last name" %>
      <%= f.text_field :email, :placeholder => "email" %>
      <%= f.password_field :password, :placeholder => "password" %>
      <%= f.submit "Sign Up" %>
    <% end %>
  </article>
</main>
